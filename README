>> hintrc
{
  "extends": [
    "development"
  ],
  "hints": {
    "axe/text-alternatives": [
      "default",
      {
        "image-alt": "off" // 이미지의 대체 텍스트가 없어도 경고를 생성하지 않도록 설정
      }
    ],
    "axe/forms": [
      "default",
      {
        "label": "off" // 폼 요소에 레이블이 없어도 경고를 생성하지 않도록 설정
      }
    ]
  }
}

